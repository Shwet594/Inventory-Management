<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Products</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen p-6">

  <main class="max-w-6xl mx-auto bg-white p-6 rounded-xl shadow-lg">
    <h1 class="text-3xl font-bold text-center mb-6">All Products</h1>
<div class="mb-4">
      <a href="/users/profile" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition duration-200">
        ← Back to Profile
      </a>
    </div>
    <% if (products && products.length > 0) { %>
      <div class="overflow-x-auto">
        <table class="min-w-full border border-gray-200 rounded-lg">
          <thead class="bg-blue-100">
            <tr>
              <th class="px-4 py-2 text-left">Brand</th>
              <th class="px-4 py-2 text-left">Model</th>
              <th class="px-4 py-2 text-left">Size</th>
              <th class="px-4 py-2 text-left">Price</th>
              <th class="px-4 py-2 text-left">Stock</th>
              <th class="px-4 py-2 text-center">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% products.forEach(product => { %>
              <tr class="border-t hover:bg-gray-50">
                <td class="px-4 py-2"><%= product.brand %></td>
                <td class="px-4 py-2"><%= product.model %></td>
                <td class="px-4 py-2"><%= product.size %></td>
                <td class="px-4 py-2">₹<%= product.price %></td>
                <td class="px-4 py-2 text-center">
                  <form action="/products/update-stock/<%= product._id %>" method="POST" class="flex items-center justify-center space-x-2">
                    <button name="action" value="decrease" class="px-2 py-1 bg-red-500 text-white rounded hover:bg-red-600">-</button>
                    <span><%= product.stock %></span>
                    <button name="action" value="increase" class="px-2 py-1 bg-green-500 text-white rounded hover:bg-green-600">+</button>
                  </form>
                </td>
                <td class="px-4 py-2 text-center space-x-2">
                  <a href="/products/edit/<%= product._id %>" class="px-2 py-1 bg-yellow-400 text-white rounded hover:bg-yellow-500">Edit</a>
                  <form action="/products/delete/<%= product._id %>" method="POST" class="inline" onsubmit="return confirm('Are you sure you want to delete this product?');" >
                    <button type="submit" class="px-2 py-1 bg-red-600 text-white rounded hover:bg-red-700">Delete</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <p class="text-center text-gray-600 mt-4">No products found.</p>
    <% } %>
  </main>

</body>
</html>
